# APIs Externas LLM e Voice (recomendado)
LLM_API_URL=http://homelab.op:10650/v1/chat/completions
LLM_MAX_TOKENS=150
LLM_TIMEOUT=30000

TTS_API_URL=http://homelab.op:5500/api/tts
TTS_VOICE=espeak:pt
TTS_FORMAT=wav
TTS_TIMEOUT=30000

