# Configurações do Bot Discord
DISCORD_TOKEN=SEU_TOKEN_AQUI

# Configurações do Banco de Dados
DATABASE_URL="postgresql://botuser:botpass@localhost:5433/marybot?schema=public"

# Configurações do Ambiente
NODE_ENV=development

# ID do desenvolvedor (opcional - para comandos admin)
OWNER_ID=SEU_ID_AQUI

# Configurações de APIs externas (opcional)
# ANIME_API_KEY=sua_chave_aqui
